{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": [
      "./src",
      "./scripts",
      "./test"
    ],
    "types": [
      "@types/node",
      "@types/chai",
      "@types/mocha"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
